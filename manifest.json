{
  "manifest_version": 3,
  "name": "IPA Transcriber",
  "description": "GPT-3 powered IPA Transcriber",
  "version": "1.0",
  "options_page": "options.html",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "host_permissions": ["https://api.openai.com/"],
  "action": {
    "default_popup": "modal.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["background.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
